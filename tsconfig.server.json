{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "backend/dist",
    "frontend"
  ]
}
